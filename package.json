{
  "name": "susaas",
  "version": "0.0.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "Sustainable SaaS",
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@sap/audit-logging": "^5",
    "@sap/cds": "^6.3.1",
    "@sap/cds-dk": "^6.3.1",
    "@sap/cds-mtxs": "^1.3.1",
    "@sap/cds-odata-v2-adapter-proxy": "^1",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "cds-swagger-ui-express": "^0.5.0",
    "cf-nodejs-logging-support": "^6",
    "cfenv": "^1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "debug": "^4.3",
    "express": "^4",
    "hdb": "^0.19",
    "node-fetch": "^2.6.7",
    "node-jose": "^2.1",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.4",
    "axios": "^0.27.2",
    "jest": "^29.0.1",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run --production",
    "dev-start": "cds run",
    "dev-start-mtx": "cds run --profile local-with-mtx",
    "api-start-local": "cds serve srv-api db",
    "api-start-hybrid": "cds serve srv-api --production",
    "test": "jest",
    "deploy:dev": "node node_modules/@sap/hdi-deploy/ --root gen/db",
    "init:broker": "cd broker && npm i && npm run init",
    "init:credstore": "node configs/automator/init-cred-store.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "features": {
      "[production]": {
        "kibana_formatter": true
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "build": {
      "tasks": [
        {
          "for": "hana"
        },
        {
          "for": "hana",
          "src": "srv-api",
          "dest": "db",
          "options": {
            "model": "srv-api"
          }
        },
        {
          "for": "nodejs"
        },
        {
          "for": "mtx",
          "src": "srv"
        },
        {
          "for": "node-cf",
          "src": "srv-api",
          "options": {
            "model": "srv-api"
          }
        },
        {
          "for": "hana",
          "src": "db-com",
          "options": {
            "model": "db-com"
          }
        }
      ]
    },
    "requires": {
      "[production]": {
        "multitenancy": true,
        "toggles": true,
        "extensibility": true,
        "cds.xt.ExtensibilityService": {
          "element-prefix": [
            "x_"
          ],
          "extension-allowlist": [{
              "for": ["*"]
          }]
        }
      },
      "[development]": {
        "multitenancy": false
      },
      "[local-with-mtx]": {
        "multitenancy": true,
        "toggles": true
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "ID": "joe@sap.com",
              "GivenName": "Joe",
              "password": "123",
              "email": "joe@sap.com",
              "roles": [
                "Admin",
                "Member"
              ]
            },
            "julie": {
              "ID": "julie@sap.com",
              "email": "julie@sap.com",
              "roles": [
                "Member"
              ]
            },
            "bob": {
              "roles": [
                "Member"
              ]
            }
          }
        },
        "[local-with-mtx]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "ID": "joe",
              "GivenName": "Joe",
              "password": "123",
              "roles": [
                "Admin",
                "Member"
              ],
              "tenant": "t1"
            }
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana-cloud",
          "vcap": {
            "label": "service-manager"
          }
        },
        "[development]": {
          "kind": "sql"
        },
        "[local-with-mtx]": {
          "kind": "sql"
        }
      },
      "db-ext": {
        "[production]": {
          "model": "db/hana"
        },
        "[development]": {
          "model": "db/sqlite"
        },
        "[local-with-mtx]": {
          "model": "db/sqlite"
        }
      },
      "db-csv": {
        "[csv]": {
          "model": "test"
        }
      }
    }
  }
}
